<Window
    x:Class="SupraSonicWin.SetupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SupraSonic Setup">

    <Grid Padding="40" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Spacing="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="WelcomeText" Text="Welcome to SupraSonic" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="DescriptionText" Text="..." 
                       TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
            
            <ProgressBar x:Name="SetupProgressBar" Minimum="0" Maximum="100" Value="0" Width="300" Height="20"/>
            <TextBlock x:Name="StatusLabel" Text="Ready to start..." HorizontalAlignment="Center"/>

            <StackPanel x:Name="AIChoicePanel" Visibility="Collapsed" Spacing="10">
                <TextBlock x:Name="AITitle" Text="Enable AI Refinement?" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock x:Name="AIDesc" Text="Use AI to fix grammar and spelling automatically. This requires an internet connection (Gemini/ChatGPT/Claude)." 
                           FontSize="12" Foreground="Gray" TextWrapping="Wrap" MaxWidth="350" TextAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                    <Button x:Name="EnableAIButton" Content="Enable AI" Click="OnEnableAIClick" Style="{StaticResource AccentButtonStyle}"/>
                    <Button x:Name="SkipAIButton" Content="Skip" Click="OnSkipAIClick"/>
                </StackPanel>
            </StackPanel>
            
            <Button x:Name="StartButton" Content="Start Setup" Click="OnStartClick" HorizontalAlignment="Center" Padding="20,10"/>
        </StackPanel>
    </Grid>
</Window>
