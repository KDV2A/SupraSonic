<Window
    x:Class="SupraSonicWin.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SupraSonicWin"
    Title="SupraSonic Settings">

    <StackPanel Padding="40" Spacing="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="SupraSonic Windows" FontSize="28" FontWeight="Bold"/>
        <TextBlock Text="The app is running in the background. Hold F12 to record." Foreground="Gray"/>
        <Button Content="Exit App" Click="OnExitClick" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
