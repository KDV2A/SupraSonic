<Page
    x:Class="SupraSonicWin.Pages.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="20">
        <ListView x:Name="HistoryListView" ItemsSource="{x:Bind Entries, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:HistoryEntry" xmlns:local="using:SupraSonicWin.Models">
                    <StackPanel Padding="10">
                        <TextBlock Text="{x:Bind Text}" TextWrapping="Wrap" FontSize="16"/>
                        <TextBlock Text="{x:Bind Timestamp}" Foreground="Gray" FontSize="12"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
